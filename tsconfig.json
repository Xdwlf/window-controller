{
    "compilerOptions": {
        "outDir": "./output/",
        "sourceMap": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "module": "esNext",
        "target": "esNext",
        "jsx": "react",
        "esModuleInterop": true,
        "allowJs": true,
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "src/*",
                "./"
            ],
            "@toolkit/*": [
                "src/toolkit/*"
            ],
            "@icons/*": [
                "src/icons/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@hooks/*": [
                "src/hooks/*"
            ],
            "@context/*": [
                "src/context/*"
            ],
            "@screens/*": [
                "src/screens/*"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "@navigation/*": [
                "src/navigation/*"
            ],
            "@assets/*": [
                "assets/*"
            ],
            "@test/*": [
                "test/*"
            ]
        },
        "lib": [
            "es2016",
            "dom"
        ]
    },
    "includes": [
        "./types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "scripts",
        "config"
    ]
}